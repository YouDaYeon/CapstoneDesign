<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignActivity">

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/cc_logo_only"/>

    <EditText
        android:id="@+id/name_edit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/logo_image"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edit_background"
        android:font="@font/notosansmedium"
        android:hint="이름"
        android:inputType="textEmailAddress"
        android:paddingStart="15dp"/>


    <EditText
        android:id="@+id/email_edit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/name_edit"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edit_background"
        android:font="@font/notosansmedium"
        android:hint="이메일"
        android:inputType="textEmailAddress"
        android:paddingStart="15dp" />

    <TextView
        android:id="@+id/school_email_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_edit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:font="@font/notosansmedium"
        android:text="학교 이메일을 입력하셔야 합니다!"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/password_edit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/email_edit"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edit_background"
        android:font="@font/notosansmedium"
        android:hint="비밀번호 (6자리 이상)"
        android:inputType="textPassword"
        android:paddingStart="15dp"/>

    <EditText
        android:id="@+id/confirm_password_edit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/password_edit"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edit_background"
        android:font="@font/notosansmedium"
        android:hint="비밀번호 확인"
        android:inputType="textPassword"
        android:paddingStart="15dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signUp_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirm_password_edit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_background"
        android:text="가입하기"
        android:font="@font/notosansbold"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize='20sp'/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signUp_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:font="@font/notosansmedium"
        android:text="입력하신 이메일 주소로 인증 메일이 발송됩니다.\n인증 진행 후 가입이 완료됩니다."
        android:textColor="@android:color/black"
        android:textSize="13sp" />

</RelativeLayout>
