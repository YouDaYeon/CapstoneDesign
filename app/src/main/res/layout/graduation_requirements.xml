<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="@drawable/layout_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="홍익대학교 소프트웨어융합학과 졸업요건"
        android:textColor="@color/campusconnect"
        android:textStyle="bold"
        android:gravity="top|left"
        android:font="@font/notosansbold"
        android:id="@+id/jorupyogun" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="2018"
            android:textColor="@color/campusconnect"
            android:textStyle="bold"
            android:font="@font/notosansbold"
            android:id="@+id/gijun_grade" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/campusconnect"
            android:font="@font/notosansmedium"
            android:text="학년도 입학생 기준"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="전문교양"
            android:textSize="15dp"
            android:font="@font/notosansmedium"
            android:textColor="#9C9C9C"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:font="@font/notosansmedium"
            android:text="예술과디자인, 제2외국어와한문 포함 7개 영역 중 6개 영역에서 최소 1과목"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="교양필수"
            android:font="@font/notosansmedium"
            android:textSize="15dp"
            android:textColor="#9C9C9C"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:font="@font/notosansmedium"
            android:textSize="15dp"
            android:text="논리적사고와글쓰기(공학)\n영어\n전공기초영어 I,II"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="졸업인정학점"
            android:font="@font/notosansmedium"
            android:textSize="15dp"
            android:textColor="#9C9C9C"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:font="@font/notosansmedium"
            android:textSize="15dp"
            android:text="23학점 이상, 최대 40학점"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="MSC과학"
            android:font="@font/notosansmedium"
            android:textSize="15dp"
            android:textColor="#9C9C9C"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:font="@font/notosansmedium"
            android:textSize="15dp"
            android:text="4학점 이상"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="MSC수학"
            android:font="@font/notosansmedium"
            android:textSize="15dp"
            android:textColor="#9C9C9C"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:font="@font/notosansmedium"
            android:textSize="15dp"
            android:text="3학점 이상"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="MSC전산"
            android:font="@font/notosansmedium"
            android:textSize="15dp"
            android:textColor="#9C9C9C"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:font="@font/notosansmedium"
            android:textSize="15dp"
            android:text="3학점 이상"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="전공"
            android:font="@font/notosansmedium"
            android:textSize="15dp"
            android:textColor="#9C9C9C"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:font="@font/notosansmedium"
            android:textSize="15dp"
            android:text="54학점 이상"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="취득학점"
            android:font="@font/notosansmedium"
            android:textSize="15dp"
            android:textColor="#9C9C9C"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:font="@font/notosansmedium"
            android:textSize="15dp"
            android:text="132학점 이상"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="졸업인정학점"
            android:font="@font/notosansmedium"
            android:textSize="15dp"
            android:textColor="#9C9C9C"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:font="@font/notosansmedium"
            android:textSize="15dp"
            android:text="132학점 이상"/>
    </LinearLayout>
</LinearLayout>
